<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cofee"
        android:scaleType="centerCrop"
        android:contentDescription="Background" />

    <!-- Semi-transparent dark overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="60dp"
        android:clipToPadding="false"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Order ID -->
            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order #123"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="20dp"
                android:shadowColor="#99000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <!-- Tracking Status -->
            <TextView
                android:id="@+id/tvTrackingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Out for Delivery"
                android:textSize="20sp"
                android:textColor="#FFEBEE"
                android:layout_marginBottom="12dp"
                android:shadowColor="#99000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3" />

            <!-- Estimated Time -->
            <TextView
                android:id="@+id/tvEstimatedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated delivery: 15 min"
                android:textSize="16sp"
                android:textColor="#E0E0E0"
                android:layout_marginBottom="30dp"
                android:shadowColor="#99000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Progress"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"
                android:shadowColor="#99000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- Status History -->
            <TextView
                android:id="@+id/tvStatusHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="#66000000"
                android:padding="16dp"
                android:lineSpacingExtra="5dp"
                android:layout_marginBottom="25dp"
                android:clipToOutline="true"
                android:scrollbars="vertical" />

            <!-- Progress / Next Button -->
            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next: Preparing Food"
                android:textAllCaps="false"
                android:padding="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#FF6F3C"
                android:textColor="@android:color/white"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:elevation="6dp"
                android:stateListAnimator="@null" />

            <!-- Go Home Button -->
            <Button
                android:id="@+id/btnGoHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏠 Go Home"
                android:textAllCaps="false"
                android:padding="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:layout_marginBottom="30dp"
                android:elevation="6dp"
                android:stateListAnimator="@null" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
